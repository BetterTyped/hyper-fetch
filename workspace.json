{
  "$schema": "./node_modules/nx/schemas/workspace-schema.json",
  "version": 2,
  "projects": {
    "core": "packages/core",
    "react": "packages/react",
    "workspace": {
      "root": ".",
      "targets": {
        "version": {
          "executor": "@jscutlery/semver:version",
          "options": {
            "syncVersions": true,
            "preset": "conventional",
            "tagPrefix": "hyper-fetch@v",
            "postTargets": ["core:npm", "core:github", "react:npm", "react:github"]
          }
        },
        "npm": {
          "executor": "npm publish"
        },
        "github": {
          "executor": "@jscutlery/semver:github",
          "options": {
            "tag": "${tag}",
            "notes": "${notes}"
          }
        }
      }
    }
  }
}
