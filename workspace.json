{
  "$schema": "./node_modules/nx/schemas/workspace-schema.json",
  "version": 2,
  "projects": {
    "core": "packages/core",
    "react": "packages/react",
    "workspace": {
      "root": ".",
      "targets": {
        "version": {
          "executor": "@jscutlery/semver:version",
          "options": {
            "syncVersions": true,
            "preset": "conventional",
            "tagPrefix": "hyper-fetch@v",
            "postTargets": ["workspace:npm", "workspace:github"],
            "commitMessageFormat": "Release version ${version}",
            "skipCommitTypes": ["docs", "ci", "style", "chore"],
            "skipCommit": true
          }
        },
        "npm": {
          "executor": "nx:run-commands",
          "options": {
            "command": "yarn publish"
          }
        },
        "github": {
          "executor": "@jscutlery/semver:github",
          "options": {
            "tag": "${tag}",
            "notes": "${notes}"
          }
        }
      }
    }
  }
}
