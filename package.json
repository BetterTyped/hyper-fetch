{
  "name": "root",
  "private": true,
  "scripts": {
    "install-peers": "node ./scripts/install-peers",
    "build": "lerna run build --concurrency 1",
    "build:docs": "cd documentation && yarn install && yarn build",
    "start": "lerna run start",
    "storybook": "start-storybook -p 6006",
    "commit": "npx git-cz",
    "postinstall": "yarn install-peers && yarn husky install",
    "bootstrap": "yarn install && yarn lerna link --force-local && yarn lerna bootstrap --force-local",
    "test": "lerna run test-pipeline --stream",
    "coverage": "lerna run coverage --stream",
    "format": "lerna run format",
    "lint": "lerna run lint --stream",
    "release": "lerna exec --concurrency 1 -- semantic-release --tag-format='${LERNA_PACKAGE_NAME}-v\\${version}'",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@commitlint/config-conventional": "^16.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-jest": "^27.4.6",
    "babel-plugin-module-resolver": "^4.1.0",
    "chalk": "^1.1.3",
    "commitlint": "^16.0.2",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "executioner": "^2.0.1",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.1.5",
    "msw": "^0.36.3",
    "prettier": "^2.5.1",
    "react-dom": "^17.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.5",
    "semantic-release": "^18.0.1",
    "semantic-release-monorepo": "^7.0.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/BetterTyped/hyper-fetch.git"
  }
