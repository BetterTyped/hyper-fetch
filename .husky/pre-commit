#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

yarn commitlint --edit "$1"
yarn nx run-many --target=build --projects=core,react,sockets,adapter-firebase
yarn nx run-many --target=lint --projects=core,react,sockets,adapter-firebase --parallel=10
yarn nx run-many --target=typecheck --projects=core,react,sockets,adapter-firebase --parallel=10
yarn nx run-many --target=tests --projects=core,react,sockets,adapter-firebase
