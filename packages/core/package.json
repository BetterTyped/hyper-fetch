{
  "name": "@better-typed/hyper-fetch",
  "version": "0.0.0",
  "description": "Cache, Queue and Persist your requests no matter if you are online or offline!",
  "author": "Maciej Pyrc <m.pyrc@interia.pl>",
  "homepage": "https://hyperfetch.bettertyped.com/",
  "license": "Apache-2.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "source": "lib/index.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BetterTyped/hyper-fetch.git"
  },
  "bugs": {
    "url": "https://github.com/BetterTyped/hyper-fetch/issues"
  },
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "test": "jest --watchAll",
    "test-pipeline": "jest --watchAll=false",
    "coverage": "jest --coverage --watchAll",
    "lint": "eslint . --ext .js,.jsx,.tsx,.ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@better-typed/react-lifecycle-hooks": "^1.0.2"
  },
  "devDependencies": {
    "rollup-plugin-ts": "^2.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "yarn jest --bail --findRelatedTests"
    ]
  },
  "keywords": [
    "fetch",
    "xhr",
    "requests",
    "js",
    "fetcher",
    "queue",
    "offline",
    "persist",
    "cache",
    "builder",
    "command"
  ]
}
