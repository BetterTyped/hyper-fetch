{
  "name": "@hyper-fetch/devtools-backend",
  "version": "0.0.0",
  "private": false,
  "description": "Backend devtools for HyperFetch",
  "author": "Kacper Skawina <kacper.skawina@gmail.com>",
  "homepage": "https://hyperfetch.bettertyped.com/",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "clean": "npx rimraf dist",
    "test": "jest --watchAll --maxWorkers=3 --forceExit",
    "test-pipeline": "jest --watchAll=false --maxWorkers=1 --no-cache --forceExit",
    "start": "yarn build && npx run-when-changed --watch 'src/**/*.{ts,tsx}' --exec 'yarn build'",
    "build": "yarn clean && node ../../scripts/build.js",
    "postbuild": "rollup -c '../../rollup.config.js'",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "tests": "yarn lint-staged",
    "release": "yarn semantic-release --extends ../../release.config.js  -t 'devtools-backend-hyper-fetch-v${version}'"
  },
  "peerDependencies": {
    "@hyper-fetch/core": "*",
    "@hyper-fetch/sockets": "*"
  },
  "peerDependenciesMeta": {
    "@hyper-fetch/core": {
      "optional": true
    },
    "@hyper-fetch/sockets": {
      "optional": true
    }
  },
  "devDependencies": {
    "superjson": "2.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn jest --passWithNoTests"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BetterTyped/hyper-fetch.git",
    "directory": "packages/devtools-backend"
  },
  "bugs": {
    "url": "https://github.com/BetterTyped/hyper-fetch/issues"
  },
  "keywords": [
    "devtools",
    "hyper-fetch"
  ]
}
