{
  "name": "@better-typed/react-hyper-fetch",
  "version": "0.0.0-development",
  "private": false,
  "description": "React hooks and utils for the hyper-fetch",
  "author": "Maciej Pyrc <m.pyrc@interia.pl>",
  "homepage": "https://hyperfetch.bettertyped.com/",
  "license": "Apache-2.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "source": "lib/index.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "dist",
    "lib"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BetterTyped/hyper-fetch.git"
  },
  "bugs": {
    "url": "https://github.com/BetterTyped/hyper-fetch/issues"
  },
  "scripts": {
    "prepublishOnly": "yarn build",
    "start": "rollup -c -w",
    "build": "rollup -c",
    "test": "jest --watchAll --maxWorkers=2",
    "test-pipeline": "jest --watchAll=false --maxWorkers=2",
    "coverage": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.jsx,.tsx,.ts --fix",
    "format": "prettier --write .",
    "precommit": "yarn lint-staged"
  },
  "peerDependencies": {
    "@better-typed/hyper-fetch": "*",
    "react": "^17.0.2"
  },
  "dependencies": {
    "@better-typed/react-lifecycle-hooks": "^1.0.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "yarn jest --bail --findRelatedTests"
    ]
  },
  "keywords": [
    "react",
    "hyper-fetch",
    "fetch",
    "xhr",
    "queue",
    "cache",
    "persist",
    "hooks",
    "useFetch",
    "useSubmit",
    "useCache",
    "useQueue",
    "graphql"
  ]
}
