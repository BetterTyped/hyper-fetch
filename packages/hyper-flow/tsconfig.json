{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "outDir": "dist",
    "paths": {
      "@/*": ["./frontend/*"],
      "@app/*": ["./app/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "@testing/*": ["../__tests__/*"]
    }
  },
  "types": ["vite-env.d.ts", "forge.env.d.ts", "electron.d.ts"],
  "exclude": ["node_modules", "dist", "jest.config.ts", "__tests__"]
}
