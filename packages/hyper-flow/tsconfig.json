{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "outDir": "dist",
    "paths": {
      "@/*": ["./frontend/*"],
      "@app/*": ["./app/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "@testing/*": ["../__tests__/*"]
    }
  },
  "exclude": ["node_modules", "dist", "jest.config.ts", "__tests__"]
}
