{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": true
  },
  "exclude": [
    "**/stories",
    "**/mocks",
    "**/tests",
    "**/docs",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "*.ts",
    "*.js",
    "*.cjs"
  ]
}
